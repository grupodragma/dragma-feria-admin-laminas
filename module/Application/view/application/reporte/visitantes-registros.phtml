            <?php endif; ?>

            //Opciones Derecha
            var botonDescargarReporte = $("<button/>");
            botonDescargarReporte.attr({
                type: "button",
                class: "btn btn-success",
                onclick: "descargarReporte(this, event, 'visitantes-registros')",
                style: "margin-right: 5px; float: right"
            });
            botonDescargarReporte.append('<i class="fas fa-download"></i> <span class="hidden-xs">Descargar Reporte</span>');
            
            tablaOpcionDerecha.append(botonDescargarReporte);
            
            //Opciones Adicionales
            $(".select2").select2();
            cargarDatosCampoBusqueda();

            //Filtrar Datos
            $(".select-tipo-registros").change(function(){
                filtrarBusqueda();
            })
            $(".select-usuarios").change(function(){
                filtrarBusqueda();
            })

        }, 500);
    });

    

    function descargarReporte(obj, event, accion){
        console.log("event", event);
        event.preventDefault();
        $(obj).addClass("disabled");
        $(obj).find("span").text("Descargando Reporte...");
        if(accion == 'visitantes-registros') {
            let idusuarios = ( typeof $(".select-usuarios").val() != "undefined" ) ? $(".select-usuarios").val() : "";
            let tiporegistro = ( typeof $(".select-tipo-registros").val() != "undefined" ) ? $(".select-tipo-registros").val() : "";
            $.get('/reporte/descargar-reporte-visitantes-registros?tiporegistro='+tiporegistro+'&idusuarios='+idusuarios, function(response) {
                console.log("response", response)
                if(response.result == "success") {
                    downloadURI('tmp/' + response.file, 'Reporte_Visitantes_Registros.xlsx');
                }
                $(obj).find("span").text("Descargar Reporte");
                $(obj).removeClass("disabled");
            }, 'json');
        }
    }

    function filtrarBusqueda(){
        let idusuarios = ( typeof $(".select-usuarios").val() != "undefined" ) ? $(".select-usuarios").val() : "";
        let tiporegistro = ( typeof $(".select-tipo-registros").val() != "undefined" ) ? $(".select-tipo-registros").val() : "";
        dataTable.api().ajax.url('/reporte/listar-visitantes-registros?tiporegistro='+tiporegistro+'&idusuarios='+idusuarios).load();
    }

    function cargarDatosCampoBusqueda(){
        $("#dataTables_filter").find("label span:first").addClass("input-group-addon input-group-text d-inline-flex width-3 align-items-center justify-content-center border-bottom-right-radius-0 border-top-right-radius-0 border-right-0").append("<i class='fas fa-search'></i>");
        $("#dataTables_filter").find("input[type='search']").attr("placeholder", "Buscar");
    }

    function listarDatos() {
        dataTable.api().ajax.reload(null, false);
    }

    function respuesta(response, mensaje) {
        ocultarModal();
        if (response.result == 'success') {
            listarDatos();
            alerta(mensaje, 'success');
        }
    }

    <?php $this->inlineScript()->captureEnd(); ?>

</script>