            //Opciones Izquierda
            var selectEstado = $("<select/>");
            selectEstado.addClass("form-control select2 select-tipo-registros");
            selectEstado.css({"width":"200px !important","margin-right":"5px"});
            selectEstado.append('<option value="">Todos los Tipos</option>');
            selectEstado.append('<option value="P">Presencial</option>');
            selectEstado.append('<option value="V">Virtual</option>');
            tablaOpcionIzquierda.append(selectEstado)

            <?php if( $this->layout()->datosUsuario['tipo'] != "R" ) : ?>
                var selectUsuarios = $("<select/>");
                selectUsuarios.addClass("form-control select2 select-usuarios");
                selectUsuarios.css({"width":"200px !important","margin-left":"5px"});
                selectUsuarios.append('<option value="">Todos los Usuarios</option>');
